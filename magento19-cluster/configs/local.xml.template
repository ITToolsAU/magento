<config>
    <global>
        <install>
            <date>{{date}}</date>
        </install>
        <crypt>
            <key>{{key}}</key>
        </crypt>
        
        <cache>
            <backend>Cm_Cache_Backend_Redis</backend>
            <backend_options>
                <server>RDC_1</server>              <!-- or absolute path to unix socket -->
                <port>6379</port>
                <persistent></persistent>               <!-- Specify a unique string like "cache-db0" to enable persistent connections. -->
                <database>0</database>
                <password></password>
                <force_standalone>0</force_standalone>  <!-- 0 for phpredis, 1 for standalone PHP -->
                <connect_retries>1</connect_retries>    <!-- Reduces errors due to random connection failures -->
                <read_timeout>10</read_timeout>         <!-- Set read timeout duration -->
                <automatic_cleaning_factor>0</automatic_cleaning_factor> <!-- Disabled by default -->
                <compress_data>1</compress_data>        <!-- 0-9 for compression level, recommended: 0 or 1 -->
                <compress_tags>1</compress_tags>        <!-- 0-9 for compression level, recommended: 0 or 1 -->
                <compress_threshold>20480</compress_threshold>  <!-- Strings below this size will not be compressed -->
                <compression_lib>gzip</compression_lib> <!-- Supports gzip, lzf and snappy -->
            </backend_options>
        </cache>
        
        <disable_local_modules>false</disable_local_modules>
        <resources>
            <db>
                <table_prefix>{{db_prefix}}</table_prefix>
            </db>
            <default_setup>
                <connection>
                    <host>{{db_host}}</host>
                    <username>{{db_user}}</username>
                    <password>{{db_pass}}</password>
                    <dbname>{{db_name}}</dbname>
                    <initStatements>{{db_init_statemants}}</initStatements>
                    <model>{{db_model}}</model>
                    <type>{{db_type}}</type>
                    <pdoType>{{db_pdo_type}}</pdoType>
                    <active>1</active>
                </connection>
            </default_setup>
            <default_read>
                <connection>
                    <use />
	                <host><![CDATA[DB_SLAVE]]></host>
                    <username>{{db_user}}</username>
                    <password>{{db_pass}}</password>
                    <dbname>{{db_name}}</dbname>
                    <type>{{db_type}}</type>
                    <model>{{db_model}}</model>
                    <initStatements>{{db_init_statemants}}</initStatements>
                    <pdoType>{{db_pdo_type}}</pdoType>
	                <active>1</active>
                </connection>
            </default_read>
        </resources>
        <session_save>{{session_save}}</session_save>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <frontName>{{admin_frontname}}</frontName>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
